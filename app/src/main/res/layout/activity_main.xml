<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/jxj"
    android:padding="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/warnaPutih"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="10dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:onClick="about"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layer1"
        android:padding="10dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="quiz"
            android:id="@+id/quiz"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/logo1"
                android:src="@drawable/quiz"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo1"
                android:text="QUIZ"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#000"/>
        </RelativeLayout>

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="article"
            android:id="@+id/article"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/logo2"
                android:src="@drawable/text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo2"
                android:text="ARTICLE"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#000"/>
        </RelativeLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layer2"
            android:padding="10dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="discus"
                android:id="@+id/discus"
                android:padding="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:id="@+id/logo3"
                    android:src="@drawable/conversation"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo3"
                    android:text="DISKUSI"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </RelativeLayout>

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="maps"
                android:id="@+id/maps"
                android:padding="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:id="@+id/logo4"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/map"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo4"
                    android:text="PETA HUTAN"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_mail_black_24dp"
        android:layout_toLeftOf="@id/email"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="#fff"
        android:textSize="12sp"
        android:id="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
